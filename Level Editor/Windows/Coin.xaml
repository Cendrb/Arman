<Window x:Class="Level_Editor.Windows.Coin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Enter coin value" Height="166" Width="387" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Enter coin value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" FontSize="16"/>
        <xctk:IntegerUpDown x:Name="valueUpDown" FontSize="48" Margin="10,41,113,10" Value="10" DefaultValue="10" ToolTip="How much score will player get when collects it"></xctk:IntegerUpDown>
        <Button Content="Create" Margin="270,41,10,10" Click="Button_Click"/>
    </Grid>
</Window>
